<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircuitMenuItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/circuitmenu_border</item>
    </style>
    <style name="CircuitMenuItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="CircuitMenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CircuitMenuItem.SubMenu">
        <item name="android:background">#0000</item>
    </style>
    <style name="CircuitMenuItemImage.Element">
        <item name="android:background">@drawable/circuitmenu_itembackground</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>

    <style name="AnalysisEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AxisControllerSelectors">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="AxisControllerLabels">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:width">0dip</item>
        <item name="android:layout_weight">15</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="AxisController">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginTop">20dip</item>

    </style>


</resources>