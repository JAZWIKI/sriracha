<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircuitMenuRow">
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <style name="CircuitMenuRow.Clickable">
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CircuitMenuItemImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circuitmenu_itembackground</item>
    </style>
    <style name="CircuitMenuItemImage.Element">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="CircuitMenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="HorizontalWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="VerticalWeight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="HorizontalWeight.AnalysisEditText">
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="HorizontalFull">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="VerticalFull">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="HorizontalFull.AnalysisEditText">
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AxisControllerSelectors">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="AxisControllerLabels">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:width">0dip</item>
        <item name="android:layout_weight">15</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="AxisController">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginTop">4dip</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:padding">2dip</item>
        <item name="android:textSize">22dip</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/ButtonText</item>
    </style>

    <style name="MenuTitle">
        <item name="android:background">@color/SnappyGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dip</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18dip</item>
    </style>
</resources>