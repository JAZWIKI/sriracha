<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:orientation="horizontal"
              android:background="#003">
    <RelativeLayout android:layout_width="150dp" android:layout_height="fill_parent"
                    android:id="@+id/circuit_menu_container">
        <include android:id="@+id/circuit_menu" layout="@layout/circuit_menu"/>
        <include android:id="@+id/sources_and_ground" layout="@layout/sources_and_ground"/>
        <include android:id="@+id/rlc" layout="@layout/rlc"/>
        <include android:id="@+id/element_properties" layout="@layout/element_properties"/>
        <include android:id="@+id/wire_properties" layout="@layout/wire_properties"/>
    </RelativeLayout>
    <sriracha.frontend.android.CircuitDesignerCanvas android:layout_width="fill_parent"
                                                     android:layout_height="fill_parent"
                                                     android:background="#DDD"
                                                     android:id="@+id/circuit_design_canvas">

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/elementmenu_container">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_marginRight="30dip"
                       android:src="@drawable/elementmenu_flip_horizontal"
                       android:id="@+id/elementmenu_flip_horizontal"
                       android:onClick="flipHorizontalOnClick"
                    />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_marginRight="30dip"
                       android:layout_toRightOf="@id/elementmenu_flip_horizontal"
                       android:src="@drawable/elementmenu_flip_vertical"
                       android:id="@+id/elementmenu_flip_vertical"
                       android:onClick="flipVerticalOnClick"
                    />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_marginRight="30dip"
                       android:layout_toRightOf="@id/elementmenu_flip_vertical"
                       android:src="@drawable/elementmenu_rotate_ccw"
                       android:id="@+id/elementmenu_rotate_ccw"
                       android:onClick="rotateCCWOnClick"
                    />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_toRightOf="@id/elementmenu_rotate_ccw"
                       android:src="@drawable/elementmenu_rotate_cw"
                       android:id="@+id/elementmenu_rotate_cw"
                       android:onClick="rotateCWOnClick"
                    />
        </RelativeLayout>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/wrenchmenu_icon"
                   android:onClick="wrenchMenuOnClick"
                />
    </sriracha.frontend.android.CircuitDesignerCanvas>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:id="@+id/results_container"
                    android:layout_marginLeft="-30dip">
        <RelativeLayout android:layout_width="30dip" android:layout_height="fill_parent"
                        android:id="@+id/results_handle"
                        android:background="#C0C"/>
        <include layout="@layout/results_testing" android:layout_toRightOf="@id/results_handle"/>
    </RelativeLayout>
</LinearLayout>
