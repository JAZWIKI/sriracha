<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:id="@+id/scalar_property_name"
            />
    <EditText android:layout_width="80dip" android:layout_height="wrap_content"
              android:id="@+id/scalar_property_value"
              android:layout_below="@id/scalar_property_name"
              android:inputType="numberDecimal|numberSigned"
              android:imeOptions="actionDone"
            />
    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/scalar_property_unit_list"
              android:layout_below="@id/scalar_property_name"
              android:layout_toRightOf="@id/scalar_property_value"
              android:layout_marginLeft="10dip"
              android:layout_marginRight="10dip"
            />
</RelativeLayout>